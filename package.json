{
  "name": "qron",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:clean": "lsof -ti :3000 | xargs kill -9 2>/dev/null || true && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "validate-queries": "node --loader ts-node/esm src/scripts/validateQueries.ts",
    "validate-pagination": "node --loader ts-node/esm src/scripts/validatePagination.ts",
    "validate-pagination-usage": "node --loader ts-node/esm src/scripts/validatePaginationUsage.ts",
    "check-imports": "node --loader ts-node/esm src/scripts/checkImports.ts",
    "validate-all": "npm run validate-queries && npm run validate-pagination && npm run validate-pagination-usage && npm run check-imports",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "npx lighthouse http://localhost:3000 --view --chrome-flags=\"--headless\"",
    "lighthouse:ci": "npx lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json --chrome-flags=\"--headless\"",
    "performance": "npm run build && npm run lighthouse",
    "performance:ci": "npm run build && npm run lighthouse:ci",
    "bundle-size": "npx bundlesize",
    "optimize-images": "npx next-optimized-images",
    "check-unused-css": "npx purgecss --css ./src/**/*.css --content ./src/**/*.{js,jsx,ts,tsx} --output ./optimized-css/",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "next lint --fix --file"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.13.5",
    "@apollo/experimental-nextjs-app-support": "^0.12.1",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@types/dompurify": "^3.0.5",
    "@types/next": "^9.0.0",
    "@types/uuid": "^10.0.0",
    "clsx": "^2.1.1",
    "critters": "^0.0.25",
    "dompurify": "^3.2.6",
    "glob": "^11.0.1",
    "graphql": "^16.10.0",
    "next": "^15.2.5",
    "node-fetch": "^3.3.2",
    "react": "^18",
    "react-dom": "^18",
    "react-phone-input-2": "^2.15.1",
    "rxjs": "^7.8.2",
    "tailwind-merge": "^3.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^22.14.0",
    "@types/react": "^18",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
